<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:layout_marginBottom="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_restro_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/black"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_restro_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="15sp"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toRightOf="@+id/iv_restro_img"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_restro_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="3dp"
        android:textSize="12sp"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toRightOf="@+id/iv_restro_img"
        app:layout_constraintTop_toBottomOf="@id/tv_restro_name"/>


    <TextView
        android:id="@+id/tv_restro_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="12sp"
        android:layout_marginTop="3dp"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toRightOf="@+id/iv_restro_img"
        app:layout_constraintTop_toBottomOf="@id/tv_restro_address"/>

    <TextView
        android:id="@+id/tv_restro_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.0"
        android:padding="6dp"
       android:background="@drawable/rating_bg"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:layout_marginEnd="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_restro_name"/>



</androidx.constraintlayout.widget.ConstraintLayout>